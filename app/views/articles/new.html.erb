<div class="container">
  <div style="width:400px">
    <h1>New article</h1>
    <%= simple_form_for(@article) do |f| %>
      <p><%= f.input :title %></p>
      <p><%= f.input :content %></p>
      <p><%= f.submit "Save", class: 'btn btn-primary' %></p>
    <% end %>
    <%= link_to "back", articles_path %>
  </div>
</div>
